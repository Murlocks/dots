URxvt.geometry: 80x22

! URXVT FONTS
!------------------------------------------------
! URxvt.font:                xft:gohufont:pixelsize=14,xft:DejaVu Sans Mono for Powerline
URxvt.font:                -*-gohufont-medium-*-*-*-*100-*-*-*-*-iso10646-*,xft:Terminess Powerline,xft:Source Code Pro,xft:Noto sans,xft:unifont:style=Medium:antialias=false
URxvt.boldFont:                -*-gohufont-medium-*-*-*-*100-*-*-*-*-iso10646-*,xft:Terminess Powerline,xft:Source Code Pro,xft:Noto sans,xft:unifont:style=Medium:antialias=false
!URxvt.boldFont:            xft:Ubuntu mono:pixelsize=17:style=Bold
URxvt*termName: urxvt
! URxvt.letterSpace: true
! URxvt*letterSpace: -2
URxvt*allow_bold: false
! URXVT FONT SETTINGS
!------------------------------------------------
! Xft.autohint: true
! Xft.antialias: true
! Xft.hinting: true
! Xft.hintstyle: hintslight
! Xft.rgba: rgb
! Xft.lcdfilter: lcddefault
! URXVT ENABLE LINK SUPPORT
!------------------------------------------------
URxvt.perl-ext-common: default,matcher,clipboard,url-select
!tabbed
URxvt.matcher.button: 1
URxvt.perl-ext: default
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/firefox
URxvt.url-select.underline: true
!disable the fucking bell
URxvt.insecure: false
! URXVT COPY PASTE SHORTCUTS
!------------------------------------------------
URxvt.iso14755: False
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
URxvt.keysym.Mod4-c: perl:clipboard:copy
URxvt.keysym.Mod4-v: perl:clipboard:paste
! URXVT SCROLLBAR AND CURSOR STYLE
!------------------------------------------------
URxvt*saveLines: 300000
URxvt.scrollBar: false
!URxvt*scrollstyle: plain
URxvt*cursorBlink: true
URxvt*cursorUnderline: true

URxvt.internalBorder: 8

rofi.kb-row-up: Alt+k,Up
rofi.kb-row-down: Alt+j,Down

Xcursor.size: 16

