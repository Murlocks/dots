#
# bspwm hotkeys
#

# note a desktop
alt + c
    echo "$(bspc query -D -d)" > /tmp/bspwmdtop_swap

# move the windows of the noted desktop to the current desktop
alt + v
    for win in $(bspc query -W -d $(cat /tmp/bspwmdtop_swap)); do \
        bspc window $win -d $(bspc query -D -d); \
    done

alt + w
    bspc window -c

alt + t
    bspc desktop -l next
    # bspc desktop -l next && bspc window -f next

alt + b
    bspc desktop -B

alt + {s,f,p}
    bspc window -t {floating,fullscreen,pseudo_tiled}

super + s
    bspc window -t sticky

super + l
    bspc window -t private

alt + {_,shift} + Tab
    bspc desktop -f {next,prev}

super + {_,shift} + Tab
    bspc window -f {next,prev}

alt + apostrophe
    bspc window -s last

alt + m
    bspc window -s biggest

alt + shift + {h,j,k,l}
    bspc config pointer_follows_focus true; \
    cur_win=$(bspc query -W -w); \
    cur_mon=$(bspc query -M -m); \
    dir={left,down,up,right}; \
    if ! bspc window -f $dir; then \
        bspc window -m ${dir}.unfocused; \
        bspc monitor -f ${dir}.unfocused; \
    else \
        new_mon=$(bspc query -M -m); \
        if [ $new_mon -eq $cur_mon ]; then \
            bspc window -s $cur_win; \
        else \
            bspc window $cur_win -m ^$new_mon; \
        fi; \
        bspc window -f $cur_win; \
    fi; \
    bspc config pointer_follows_focus false

alt + {h,j,k,l}
    bspc config pointer_follows_monitor true; \
    bspc config pointer_follows_focus true; \
    dir={left,down,up,right}; \
    if ! bspc window -f ${dir}.unfocused; then \
        bspc monitor -f ${dir}.unfocused; \
    fi; \
    bspc config pointer_follows_monitor false; \
    bspc config pointer_follows_focus false

alt + e
    bspc desktop -B

alt + {comma,period}
    bspc desktop -C {backward,forward}

alt + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}

alt + ctrl + {_,shift + }space
    bspc {window -p cancel,desktop -c}

super + ctrl + {h,j,k,l}
    bspc window -e {right -35,up +35,up -35,right +35}

super + ctrl + shift + {h,j,k,l}
    bspc window -e {left -35,down +35,down -35,left +35}

alt + ctrl + {1-9}
    bspc window -r 0.{1-9}

# These two keybinds determine index by list order of desktops from current monitor
alt + {1-9}
    D={1-9}; \
    bspc desktop -m focused -f "$(bspc query -D -m | sed -n "$D p")"

alt + shift + {1-9}
    D={1-9}; \
    bspc window -d "$(bspc query -D -m | sed -n "$D p")"


alt + ctrl + {y,x}
        bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 10))

~button1
    bspc pointer -g focus

alt + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
    bspc pointer -t %i %i

alt + @button{1-3}
    bspc pointer -u

alt + d
    bspc control --toggle-visibility

alt + shift + q
    killall panel && bspc quit

alt + {_,shift} + semicolon
    bspc desktop -R {90,270}

# alt + g
#   [[ -f ~/.config/bspwm/!window_gap ]] && rm -f ~/.config/bspwm/!window_gap || touch ~/.config/bspwm/!window_gap; \
#     window_gap

#
# wm independent hotkeys
#

alt + o
    firefox

# alt + e
#     pcmanfm

alt + Return
    urxvtc

alt + space
    dmenu_run_custom

super + v
    dmenuclip_wrapper

super + c
    dmenu_calc

super + p
    toggle.sh

XF86Audio{Prev,Next}
     mpc -q {prev,next}


XF86AudioPlay
     mpc -q toggle

XF86Audio{LowerVolume,RaiseVolume}
    amixer -q sset Master 3%{-,+}

XF86AudioMute
    amixer -q set Master toggle

XF86MonBrightnessUp
    xbacklight -inc 10

XF86MonBrightnessDown
    xbacklight -dec 10

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

super + alt + Escape
	pkill -x panel; \
        bspc quit
